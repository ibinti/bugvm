. $srcdir/test-lib.sh

require_cat
use_local_patch
use_tmpdir

# ==============================================================
# Remove empty parent diectories when removing a file

mkdir dir
echo foobar > dir/file
cat > apatch <<EOF
--- dir/file
+++ /dev/null
@@ -1 +0,0 @@
-foobar
EOF

check 'patch -p0 -E < apatch' <<EOF
patching file dir/file
EOF

ncheck '! test -e dir'
